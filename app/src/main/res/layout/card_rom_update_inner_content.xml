        android:ellipsize="marquee"
        android:singleLine="true" />

    <ProgressBar
        tools:progress="60"
        android:id="@+id/rom_update_inner_progress"
        style="@style/rom_update_inner_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
