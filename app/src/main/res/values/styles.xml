<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Cards -->
    <style name="rom_update_inner_status_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_marginLeft">@dimen/card_header_simple_title_margin_left</item>
    </style>

    <style name="rom_update_inner_body_text">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/card_header_simple_title_margin_left</item>
    </style>

    <style name="simple_message_inner_title_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="simple_message_inner_body_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Dividers -->
    <style name="StandardDivider">
        <item name="android:id">@id/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>
    </style>

    <style name="BigDivider" parent="StandardDivider">
        <item name="android:layout_height">4dp</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:id">@id/divider</item>
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">?android:attr/dividerVertical</item>
    </style>

    <style name="ButtonBarDivider">
        <item name="android:id">@id/divider</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
